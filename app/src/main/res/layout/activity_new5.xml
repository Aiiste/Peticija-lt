<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".NewActivity5">
    <ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_margin="16dp"
        android:orientation="vertical">
    <TextView
        android:id="@+id/textView8"
        android:layout_width="260dp"
        android:layout_height="21dp"
        android:text="Peticijos pateikimas"
        app:layout_constraintBottom_toTopOf="@+id/textView9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="1.0" />

    <TextView
        android:id="@+id/textView9"
        android:layout_width="258dp"
        android:layout_height="20dp"
        android:text="1. Užpildykite peticiją"
        app:layout_constraintBottom_toTopOf="@+id/textView10"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView8" />

    <TextView
        android:id="@+id/textView10"
        android:layout_width="357dp"
        android:layout_height="54dp"
        android:text="2. Jeigu pageidaujate per peticiją rinkti 2% paramą, vienkartinis paslaugos mokestis  30 eur, apie tai informuokite el. paštu peticijos@gmail.com"
        app:layout_constraintBottom_toTopOf="@+id/textView11"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView9" />

    <TextView
        android:id="@+id/textView11"
        android:layout_width="139dp"
        android:layout_height="29dp"
        android:text="Taisyklės"
        app:layout_constraintBottom_toTopOf="@+id/textView12"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView10"
        tools:textColor="?android:attr/colorForeground" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="275dp"
        android:layout_height="23dp"
        android:text="1. Peticijų kūrimas ir pasirašymas:"
        android:textColor="@android:color/black"
        app:layout_constraintBottom_toTopOf="@+id/textView13"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView11" />

    <TextView
        android:id="@+id/textView13"
        android:layout_width="355dp"
        android:layout_height="51dp"
        android:text="Kurti peticijas gali fiziniai, juridiniai asmenys, asmenų grupės, neformalios ir visuomeninės organizacijos bei kitos grupės"
        app:layout_constraintBottom_toTopOf="@+id/textView15"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView12" />

    <TextView
        android:id="@+id/textView15"
        android:layout_width="332dp"
        android:layout_height="34dp"
        android:text="- Visos temos kurti peticijai tinka, jeigu neprieštarauja taisyklėms."
        app:layout_constraintBottom_toTopOf="@+id/textView16"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView13" />

    <TextView
        android:id="@+id/textView16"
        android:layout_width="332dp"
        android:layout_height="35dp"
        android:text="- Už paskelbtą peticijos turinį atsako ją sukūręs asmuo."
        app:layout_constraintBottom_toTopOf="@+id/textView17"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView15" />

    <TextView
        android:id="@+id/textView17"
        android:layout_width="331dp"
        android:layout_height="53dp"
        android:text="- Kurdamas peticiją, asmuo privalo užpildyti visus laukelius tvarkingai, taisyklinga lietuvių kalba, nevartoti įžeidžiančių žodžių."
        app:layout_constraintBottom_toTopOf="@+id/textView18"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView16" />

    <TextView
        android:id="@+id/textView18"
        android:layout_width="331dp"
        android:layout_height="89dp"
        android:text='- Skiltyje "Peticijos aprašymas" naudojant argumentus stenkitės pateikti kuoišsamesnę informaciją apie kuriamą peticiją. Draudžiama pateikti informaciją, kuri prieštarautų Lietuvos Respublikos konstitucijai.'
        app:layout_constraintBottom_toTopOf="@+id/textView19"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView17" />

    <TextView
        android:id="@+id/textView19"
        android:layout_width="331dp"
        android:layout_height="52dp"
        android:text="- Sukurtos peticijos bus peržiūrėtos ir apie patvirtintą/nepatvirtintą peticiją autorius bus informuotas el. paštu."
        app:layout_constraintBottom_toTopOf="@+id/textView20"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/textView18" />

        <TextView
            android:id="@+id/textView20"
            android:layout_width="334dp"
            android:layout_height="100dp"
            android:text="Dėl iškilusių problemų ar klausimų galite kreiptis el.paštu: peticijos@gmail.com"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textView19" />
    </LinearLayout>
    </ScrollView>
</android.support.constraint.ConstraintLayout>